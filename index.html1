<html>

    <head>
        <meta charset="8">
        <title>Vue.js</title>
        <link href="MyStyle.css" rel="stylesheet">
        <script src="https://unpkg.com/vue@2.5.17/dist/vue.js"></script>
    </head>

    <body>
        <div id="temperature">
            <!-- lego l'ID all'istanza in app.js per controllare l'intero div dalla pagina app.js -->

            <h1>{{greets('night')}}</h1>
            <!-- se ci avessi messo morning al posto di night avrebbe visualizzato good night -->
            <!-- ho creato una funzione in app.js e la lego qui -->


            <p>Name: {{temperature}}</p>
            <!-- controllo questi elementi con le istanze nella pagina app.js -->
            <p>Job: {{job}}</p>


            <h1>Data binding</h1>
            <a v-bind:href="website">Browser link</a>
            <!-- il v-bind serve per dirgli al tag di fare qualcosa, in questo cao prendere le inforazioni dl link contenute nella pagina app.js, quindi il link vero e proprio -->

            <p v-html="websiteTag"></p>

        </div>

        <div id="vue-app2">


            <!-- One click events -->
            <button v-on:click="Add(1)">Add a year</button>
            <button v-on:click="Subtract(1)">Subtract a year</button>



            <!-- Double click events -->
            <button v-on:dblclick="Add(10)">Add 10 year</button>
            <button v-on:dblclick="Subtract(10)">Subtract 10 year</button>

            <p>My age is {{age}}</p>

            <!-- Mouse move events -->
            <div id="canvas" v-on:mousemove="updateXY">{{x}}, {{y}}</div>

            <!-- Event modifier -->

            <!-- il .once fa funzionare l'evento solo una volta 
                
            <button v-on:click.once="Add(1)">Add a year</button>
            <button v-on:dblclick.once="Add(10)">Add 10 year</button>   
            -->


        </div>

        <div id="vue-app3">
            <h1>Keyboard events</h1>
            <label>Name:</label>
            <input type="text" v-on:keyup.enter="logName"/> <!--funzione che si scatena solo quando premo enter alla fine  -->
            <label>Age:</label>
            <input type="text" v-on:keyup.alt.enter="logAge"/> <!-- funzione che siscatena solo quando premo al ed enter assieme -->
    
            <br>
            <!-- Data Binding -->
            <p>Type your name</p>
            <input type="text" v-model="name"/>
            <span>{{name}}</span>
    
    
        </div>

        <div id="vue-app4">

            <h1>Computed Properties</h1>
            <button v-on:click="a++">add to a </button>
            <button v-on:click="b++">add to b </button>
            <p>A - {{a}}</p>
            <p>B - {{b}}</p> 
            <p>Age + A = {{addToA}}</p>   <!-- Computed Properties -->
            <p>Age + B = {{addToB}}</p>



        </div>

        <script src="app.js"></script>



        
    </body>

    </html>